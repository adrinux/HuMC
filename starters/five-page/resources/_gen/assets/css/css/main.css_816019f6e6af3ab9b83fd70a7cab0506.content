    display: grid;
    grid-template-columns: [left-gutter] 20px [container] 1fr [right-gutter] 20px;
  }


  .container {
    grid-column: container;
    display: grid;
    grid-template-rows: [header] auto [main] 1fr [footer] auto;
    grid-template-columns: [sidebar] 4fr [content] 8fr;
  }

  header {
    grid-row: header;
    grid-column: sidebar / right-gutter;
  }

  main {
    grid-row: main;
    grid-column: sidebar / right-gutter;
  }

  footer {
    grid-row: footer;
    grid-column: sidebar / right-gutter;
  }

}

